<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <!-- 状态栏颜色-->
        <item name="colorPrimaryDark">#059183</item>
        <!-- toolbar（actionbar）颜色-->
        <item name="android:textColorPrimary">@color/near_black</item>
        <item name="colorAccent">#EF9A9A</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <!-- 窗口背景-->
        <item name="android:windowBackground">@color/main_bg</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="tool_bar_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="my_shop_text_style">
        <item name="android:textColor">@color/no_goods_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="add_text_style">
        <item name="android:textColor">#f05452</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="shop_management_btn_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="add_goods_dialog_text_style">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="add_good_new_cata_title_text_style">
        <item name="android:textColor">@color/app_theme_color2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="browse_collect_text_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="pull_off_sale_btn_style">
        <item name="android:textColor">@color/app_theme_color2</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
