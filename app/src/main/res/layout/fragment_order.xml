<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ogaclejapan.smarttablayout.SmartTabLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/order_smart_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        app:stl_clickable="true"
        app:stl_defaultTabTextColor="@drawable/goods_smart_tab_textcolor"
        app:stl_defaultTabTextSize="16sp"
        app:stl_distributeEvenly="true"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="@color/app_theme_color"
        app:stl_indicatorCornerRadius="5dp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="4dp"
        app:stl_underlineColor="@color/white"
        app:stl_underlineThickness="0dp" />

    <!--app:stl_indicatorWithoutPadding="true"  来确定引导线是全部还是部分-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/order_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>